ARG EHRBASE_IMAGE

#
# Builder stage to download Jacoco
#
FROM maven:3.9-eclipse-temurin-21-alpine AS builder

WORKDIR /build

# Download Jacoco and cache the layer
COPY --from=builder /build/jacoco-agent.zip .  # Cache Jacoco download
RUN apk --update add unzip && rm -rf /var/cache/apk/* \
  && export JACOCO_VERSION=$(mvn help:evaluate -Dexpression=maven-jacoco-plugin.version -q -DforceStdout) \
  && curl -sSL --data-urlencode "filepath=org/jacoco/jacoco/$JACOCO_VERSION/jacoco-$JACOCO_VERSION.zip" https://search.maven.org/remotecontent > jacoco-agent.zip \
  && unzip jacoco-agent.zip

# Final image stage
FROM ${EHRBASE_IMAGE}

# Copy Jacoco agent and application jar
COPY --from=builder /build/jacoco-agent.jar /app/jacoco-agent.jar
COPY --from=builder /build/*.jar /app/

USER root

ENV JACOCO_RESULT_PATH=/app/coverage/jacoco.exec

ENTRYPOINT java -jar -Dspring.profiles.active=docker -javaagent:/app/jacoco-agent.jar=destfile=${JACOCO_RESULT_PATH},append=false,includes=org.ehrbase.* /app/ehrbase.jar
